{% if form.errors %}
<div class="alert-box error">
  <p>Oops! There were some errors with your submission:</p>
  <ul class="errors-list">
    {% for field in form.errors %}
      <li><strong>{{ field | capitalize }}</strong> {{ form.errors.messages[field] }}.</li>
    {% endfor %}
  </ul>
</div>
{% endif %}