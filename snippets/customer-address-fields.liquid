<div class="customer-address-fields">
  <div class="row">
    <div class="medium-12 large-6 columns medium-centered">

      {% for field in form_fields %}
        <div class="row">
          {% unless field == 'province' %}
          <div class="medium-3 columns">
            <label for="address_{{field}}_{{customer-address-fields}}" class="inline">{{form_field_labels[forloop.index0]}}</label>
          </div>
          <div class="medium-9 columns">
            {% if field == 'country' %}
            <select id="address_country_{{customer-address-fields}}" name="address[country]" data-default="{{form.country}}">{{ country_option_tags }}</select>
            {% else %}
            <input type="text" id="address_{{field}}_{{customer-address-fields}}" name="address[{{field}}]" value="{{form[field]}}"/>
            {% endif %}
          </div>
          {% else %}
          <div id="address_province_container_{{customer-address-fields}}">
            <div class="medium-3 columns">
              <label for="address_{{field}}_{{customer-address-fields}}" class="inline">{{form_field_labels[forloop.index0]}}</label>
            </div>
            <div class="medium-9 columns">
              <select id="address_province_{{customer-address-fields}}" class="address_form" name="address[province]" data-default="{{form.province}}"></select>
            </div>
          </div>
          {% endunless %}
        </div>
      {% endfor %}

      <div class="row">
        <div class="medium-9 medium-offset-3 columns">
          {{ form.set_as_default_checkbox }}
          <label for="address_default_address_{{customer-address-fields}}">Set as default address?</label>
        </div>
      </div>

      <div class="row">
        <div class="medium-9 medium-offset-3 columns">
          <div class="form-actions">
            {% if customer-address-fields == 'new' %}
            <input class="button" type="submit" value="Add address" />
            <span class="note"> or <a href="#" onclick="Shopify.CustomerAddress.toggleNewForm(); return false;">Cancel</a></span>
            {% else %}
            <input class="button" type="submit" value="Update address" />
            <span class="note"> or <a href="#" onclick="Shopify.CustomerAddress.toggleForm({{customer-address-fields}}); return false;">Cancel</a></span>
            {% endif %}
          </div>
        </div>
      </div>

    </div>
  </div>
</div>