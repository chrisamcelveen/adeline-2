<footer class="article-footer section">
{% if blog_prefix != 'article' %}
  <!-- Article list -->
{% else %}
  <div class="article-location text-color-quiet">
    This entry was posted in {{ blog.title | link_to: blog.url }}{% if article.tags.size > 0 %} and tagged {% for tag in article.tags %}<a href="{{ blog.url }}/tagged/{{ tag | handle }}" rel="tag">{{ tag | strip_html | replace: ' ', '&nbsp;'}}</a>{% unless forloop.last %}<span class="sep">, </span>{% endunless %}{% endfor %}{% endif %}.
  </div>

  <!-- Single article -->
  {% if settings.article_display_sharing_google_plus? or settings.article_display_sharing_twitter? or settings.article_display_sharing_facebook? %}
    {% include 'share' with article %}
  {% endif %}

{% endif %}
</footer>